<p style="color: green"><%= notice %></p>

<% content_for :title, "Transactions" %>

<h1>Transactions</h1>

<%= form_with url: transactions_path, method: :get, local: true do |f| %>
  <div>
    <%= f.label :account_id, "Filter by Account" %>
    <%= f.select :account_id, grouped_options_for_select(@accounts_by_type.map { |type, accounts| [type, accounts.map { |a| [a.name, a.id] }] }, params[:account_id]), { include_blank: "All Accounts" } %>
    <%= f.submit "Filter" %>
    <% if params[:account_id].present? %>
      <%= link_to "Clear", transactions_path %>
    <% end %>
  </div>
<% end %>

<div id="transactions">
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Description</th>
        <th>From</th>
        <th>To</th>
        <th>Amount</th>
        <th>Currency</th>
        <th>Category</th>
        <th>Cleared</th>
        <th>Split</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render "new_transaction_row",
            transaction: @new_transaction,
            src_accounts: @src_accounts,
            dest_accounts: @dest_accounts,
            categories: @categories %>
      <% @transactions.each do |transaction| %>
        <%= render "transaction_row", transaction: transaction %>
      <% end %>
    </tbody>
  </table>
</div>
